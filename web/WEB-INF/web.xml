<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.training.online_pharmacy.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPage</servlet-name>
        <jsp-file>/WEB-INF/pages/main.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>AuthorizationPage</servlet-name>
        <jsp-file>/WEB-INF/pages/authorization.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorizationPage</servlet-name>
        <url-pattern>/authorization.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPage</servlet-name>
        <url-pattern>/main.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>settings</servlet-name>
        <jsp-file>/WEB-INF/pages/settings.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>settings</servlet-name>
        <url-pattern>/settings</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/pages/error/404.html</location>
    </error-page>
    <error-page>
        <exception-type>by.training.online_pharmacy.service.exception.InternalServerException</exception-type>
        <location>/WEB-INF/pages/error/500.html</location>
    </error-page>
    <listener>
        <listener-class>by.training.online_pharmacy.listener.ContextCreateListener</listener-class>
    </listener>
</web-app>